n v-on=\"on\" icon class=\"start-edit-btn\" @click=\"startEdit\">\n                                <v-icon class=\"mt-1\" x-small>fas fa-edit</v-icon>\n                            </v-btn>\n                        </template>\n                        {{labelBtnEdit}}\n                    </v-tooltip>\n                </v-card-text>\n            </v-card>\n        </div>\n\n        <v-text-field\n            v-show=\"editing && (!mask || mask === '')\"\n            v-model=\"model\"\n            :label=\"label\"\n            :name=\"name\"\n            :maxlength=\"maxlength\"\n            :error-messages=\"errors.collect(name)\"\n            :counter=\"counter\"\n            :placeholder=\"placeholder\"\n            v-validate=\"validate\"\n            :data-vv-as=\"name\"\n            @keyup.enter=\"submitEdit\"\n            @keyup.esc=\"cancelEdit\"\n            @click:append=\"cancelEdit\"\n            @click:clear=\"submitEdit\">\n            <template v-slot:append>\n                <v-tooltip top>\n                    <template v-slot:activator=\"{ on }\">\n                        <v-btn v-on=\"on\" icon @click=\"submitEdit\">\n                            <v-icon small class=\"primary--text\">fas fa-check</v-icon>\n                        </v-btn>\n                    </template>\n                    {{labelBtnSave}}\n                </v-tooltip>\n                <v-tooltip top>\n                    <template v-slot:activator=\"{ on }\">\n                        <v-btn v-on=\"on\" icon @click=\"cancelEdit\">\n                            <v-icon small>fas fa-times</v-icon>\n                        </v-btn>\n                    </template>\n                    {{labelBtnCancel}}\n                </v-tooltip>\n            </template>\n        </v-text-field>\n\n        <v-text-field\n            v-if=\"editing && mask\"\n            v-model=\"model\"\n            :label=\"label\"\n            :name=\"name\"\n            :maxlength=\"maxlength\"\n            :erro